global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'Prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']
  

  - job_name: 'cAdvisor Test'
    scrape_interval: 5s
    static_configs:
      - targets:
      {% for host in groups['testServers'] %}
      {% if inventory_hostname != host %}
         ['{{ host }}:9280']
      {% endif %}
      {% endfor %} 

  - job_name: 'TestServers'
    scrape_interval: 5s
    static_configs:
      - targets:
      {% for host in groups['testServers'] %}
      {% if inventory_hostname != host %}
         ['{{ host }}:9100']
      {% endif %}
      {% endfor %}

  
  - job_name: 'Grafana'
    scrape_interval: 5s
    static_configs:
      - targets:
      {% for host in groups['grafanaTestingVM'] %}
      {% if inventory_hostname != host %}
         [ '{{ host }}:9100' ]
      {% endif %}
      {% endfor %}

rule_files:
  - alert.rules.yml

alerting:
  alertmanagers:
  - static_configs:
    - targets:
    {% for host in groups['monitoringTestingVM'] %}
    {% if inventory_hostname != host %}
       ['{{ host }}:9093']
    {% endif %}
    {% endfor %}
